{
	"name": "@wavynode/utils",
	"version": "0.1.0",
	"description": "A set of utilities for integrating WavyNode",
	"main": "dist/index.cjs",
	"module": "dist/index.mjs",
	"types": "dist/types/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/index.cjs",
			"import": "./dist/index.mjs",
			"types": "./dist/types/index.d.ts"
		}
	},
	"files": [
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"dist/**/*.mjs"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/wavy-node/utils.git"
	},
	"author": "Manuel Rivera <menu.rivera@gmail.com>",
	"license": "Apache-2.0",
	"bugs": {
		"url": "https://github.com/wavy-node/utils/issues"
	},
	"homepage": "https://github.com/wavy-node/utils#readme",
	"scripts": {
		"build": "bun test && bun run build:types && bun run build:cjs && bun run build:esm",
		"build:cjs": "bun build src/index.ts --minify --target=node --outfile=dist/index.cjs --sourcemap --format=cjs",
		"build:esm": "bun build src/index.ts --minify --target=node --outfile=dist/index.mjs --sourcemap --format=esm",
		"build:types": "tsc",
		"prepublishOnly": "bun run build"
	},
	"devDependencies": {
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	}
}
